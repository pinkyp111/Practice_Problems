public class Pattern{

    public static void main(String args[]){
        int n=5;
        for(int i=1;i<=n;i++){//i loop for printing lin1,lin2,lin3
         for(int j=i;j>0;j--)
         System.out.print("* ");
         System.out.println("");
        }
    }
}
